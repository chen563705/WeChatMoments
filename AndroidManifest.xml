<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homework.wechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.homework.wechat" >
    </instrumentation>

    <application
        android:name="com.homework.wechat.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/weixinpyq"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.homework.wechat.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_pengyouquan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>